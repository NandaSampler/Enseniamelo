# Mongo Atlas (SRV)
MONGO_URI=mongodb+srv://<usuario>:<password>@<cluster-id>.mongodb.net/enseniamelo?retryWrites=true&w=majority&appName=Cluster0
MONGO_DB=enseniamelo

# Eureka (discovery)
