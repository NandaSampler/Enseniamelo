EUREKA_PORT=8761
EUREKA_APP_NAME=PAYMENTS-SERVICE
EUREKA_INSTANCE_HOST=payments-service
EUREKA_INSTANCE_PORT=8002
EUREKA_SECURE=false
EUREKA_HEARTBEAT=30
EUREKA_REFRESH=30

# Keycloak (auth)
